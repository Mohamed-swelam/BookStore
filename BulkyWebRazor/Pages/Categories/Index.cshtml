@page
@using BulkyWebRazor.Models
@model BulkyWebRazor.Pages.Categories.IndexModel
@{
}
<div class="container">

    <div class="row pt-4 pb-3 ">
        <div class="col-6">
            <h2 class="text-primary">
                Catrgory List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page = "/Categories/create" class="btn btn-primary ">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>

            <tr>
                <th>Name</th>
                <th>DisplayOrder</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category item in Model.categories.OrderBy(i => i.DisplayOrder))
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/Categories/edit" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        </div>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/Categories/delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>