@page
@model BulkyWebRazor.Pages.Categories.DeleteModel



<form method="post">
    <input asp-for="category.Id" hidden />
    <div class="border pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        
        <div class="mb-3 row">
            <label asp-for="category.Name" class="p-0"></label>
            <input asp-for="category.Name" class="form-control" disabled />
            
        </div>
        <div class="mb-3 row">
            <label asp-for="category.DisplayOrder" class="p-0"></label>
            <input asp-for="category.DisplayOrder" class="form-control" disabled />
            
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <input type="submit" class="form-control btn btn-danger" value="Delete" />
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/categories/index" class="btn btn-secondary border" style="width:150px">Back To List</a>
            </div>
        </div>
    </div>

</form>
